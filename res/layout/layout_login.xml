<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android1:background="@drawable/bg"
    android1:contentDescription="@drawable/bg" >

    <LinearLayout
        android1:id="@+id/linearLayout1"
        android1:layout_width="240dp"
        android1:layout_height="wrap_content"
        android1:layout_centerInParent="true"
        android1:orientation="horizontal" >

        <TextView
            android1:id="@+id/tv_login_passwort"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_gravity="center"
            android1:layout_weight="8.40"
            android1:gravity="right"
            android1:text="Passwort: "
            android1:textSize="18sp" />

        <EditText
            android1:id="@+id/ed_login_passwort"
            android1:layout_width="150dp"
            android1:layout_height="wrap_content"
            android1:ems="10"
            android1:inputType="textPassword"
            android1:text="1234" />
    </LinearLayout>

    <Button
        android1:id="@+id/bt_login_register"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/bt_login_login"
        android1:layout_alignRight="@+id/bt_login_login"
        android1:layout_below="@+id/bt_login_login"
        android1:text="Registrierung" />

    <Button
        android1:id="@+id/bt_login_login"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/linearLayout1"
        android1:layout_alignRight="@+id/linearLayout1"
        android1:layout_below="@+id/linearLayout1"
        android1:layout_marginTop="10dp"
        android1:text="Login" />

    <LinearLayout
        android1:id="@+id/linearLayout2"
        android1:layout_width="240dp"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/linearLayout1"
        android1:layout_centerHorizontal="true"
        android1:orientation="horizontal" >

        <TextView
            android1:id="@+id/tv_login_benutzer"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_gravity="center"
            android1:layout_weight="2.53"
            android1:gravity="right"
            android1:text="Benutzer: "
            android1:textSize="18sp" />

        <EditText
            android1:id="@+id/ed_login_benutzer"
            android1:layout_width="150dp"
            android1:layout_height="wrap_content"
            android1:ems="10"
            android1:inputType="textPersonName"
            android1:text="Raphael" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <ImageView
        android1:id="@+id/iv_main_liste_icon"
        android1:layout_width="300dp"
        android1:layout_height="200dp"
        android1:layout_above="@+id/linearLayout2"
        android1:layout_centerHorizontal="true"
        android1:layout_marginBottom="10dp"
        android1:src="@drawable/icon" />

    <ProgressBar
        android1:id="@+id/pb_login"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_centerInParent="true" />

</RelativeLayout>