<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android1:background="@drawable/bg" >

    <LinearLayout
        android1:id="@+id/linearLayout2"
        android1:layout_width="240dp"
        android1:layout_height="wrap_content"
        android1:layout_centerInParent="true" >

        <TextView
            android1:id="@+id/tv_register_passwort"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_weight="5.30"
            android1:gravity="right"
            android1:textSize="18sp" 
            android1:text="Passwort:" />

        <EditText
            android1:id="@+id/ed_register_passwort"
            android1:layout_width="150dp"
            android1:layout_height="wrap_content"
            android1:inputType="textPassword" />
    </LinearLayout>

    <Button
        android1:id="@+id/bt_register_register"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/linearLayout2"
        android1:layout_alignRight="@+id/linearLayout2"
        android1:layout_below="@+id/linearLayout2"
        android1:layout_marginTop="10dp"
        android1:text="Registrieren" />

    <LinearLayout
        android1:id="@+id/linearLayout1"
        android1:layout_width="240dp"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/linearLayout2"
        android1:layout_centerHorizontal="true" >

        <TextView
            android1:id="@+id/tv_register_benutzer"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:gravity="right"
            android1:layout_weight="2.60"
            android1:textSize="18sp" 
            android1:text="Benutzer:" />

        <EditText
            android1:id="@+id/ed_register_benutzer"
            android1:layout_width="150dp"
            android1:layout_height="wrap_content"
            android1:inputType="textPersonName" />
    </LinearLayout>

    <ImageView
        android1:id="@+id/imageView1"
        android1:layout_width="300dp"
        android1:layout_height="200dp"
        android1:layout_above="@+id/linearLayout1"
        android1:layout_centerHorizontal="true"
        android1:layout_marginBottom="10dp"
        android1:src="@drawable/icon" />

</RelativeLayout>